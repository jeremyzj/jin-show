<NavigatorBar 
  title="作品展示"
  needLogo="{{true}}"
/>
<View class="container">
    <WorkCategory 
      bind:tapCategory="tapWorkCategory"
      bind:loadedCategory="loadedCategory"
    />
    <block wx:if="{{selected==0}}">
      <scroll-view 
      class="work-list" 
      style="height: {{scrollHeight}}px;" 
      show-scrollbar="{{false}}"
      enable-flex="true"
      scroll-y="true">
      <grid-view cross-axis-gap="6" cross-axis-count="1" type="masonry">
        <block wx:for="{{microfilms}}" wx:key="id">
        <WorkVideo 
          videoIcon="{{videoIcon}}"
          bind:tapVideo="tapWorkVideo"
          videoId="{{index}}"
          id="{{index}}"
          isSelect="{{index==selectedVideo}}"
          poster="{{item.poster}}"
          title="{{item.title}}"
          url="{{item.video}}"
        ></WorkVideo>
        </block>
      </grid-view>
      </scroll-view>
    </block>
    <block wx:if="{{selected==1}}">
      <scroll-view 
      class="work-list" 
      style="height: {{scrollHeight}}px;" 
      show-scrollbar="{{false}}"
      enable-flex="true"
      scroll-y="true">
      <grid-view cross-axis-gap="6" cross-axis-count="1" type="masonry">
        <block wx:for="{{promotions}}" wx:key="id">
        <WorkVideo 
          videoIcon="{{videoIcon}}"
          bind:tapVideo="tapWorkVideo"
          videoId="{{index}}"
          id="{{index}}"
          isSelect="{{index==selectedVideo}}"
          poster="{{item.poster}}"
          title="{{item.title}}"
          url="{{item.video}}"
        ></WorkVideo>
        </block>
      </grid-view>
      </scroll-view>
    </block>
    <block wx:if="{{selected==2}}">
      <scroll-view 
      class="work-list" 
      style="height: {{scrollHeight}}px;" 
      enable-flex="true"
      scroll-y="true"
      type="custom"
      show-scrollbar="{{false}}"
      >
      <grid-view cross-axis-gap="6" cross-axis-count="2" type="masonry">
        <block wx:for="{{goods}}" wx:key="id">
        <navigator url="/pages/work-info/index?id={{item.id}}&type={{selected}}&title={{item.title}}" 
        hover-class="navigator-hover">
          <Card 
            icon="{{item.icon}}"
            title="{{item.title}}"
            index="card-{{index}}"
            isVideo="{{true}}"
            videoIcon="{{videoIcon}}"
          />
        </navigator>
        </block>
        </grid-view>
      </scroll-view>
    </block>

</View>