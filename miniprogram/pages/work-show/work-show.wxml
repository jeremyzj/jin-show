<View class="container">
    <WorkCategory 
      bind:tapCategory="tapWorkCategory"
    />
    <block wx:if="{{selected==1}}">
      <scroll-view 
      class="work-list" 
      style="height: {{scrollHeight}}px;" 
      enable-flex="true"
      scroll-y="true">
        <block wx:for="{{worksData}}" wx:key="id">
        <WorkVideo 
          videoIcon="{{videoIcon}}"
          bind:tapVideo="tapWorkVideo"
          videoId="{{index}}"
          id="{{index}}"
          isSelect="{{index==selectedVideo}}"
          poster="https://636c-cloud1-8gnde99f1c63f90f-1319765993.tcb.qcloud.la/poster.png?sign=ab6fa805f02ae28e605c6386c2f7ce5b&t=1691903131"
          title="{{item.title}}"
          url="{{item.url}}"
        ></WorkVideo>
        </block>
      </scroll-view>
    </block>
    <block wx:if="{{selected==2}}">
      <scroll-view 
      class="work-list" 
      style="height: {{scrollHeight}}px;" 
      enable-flex="true"
      scroll-y="true"
      type="custom"
      >
      <grid-view cross-axis-gap="6" cross-axis-count="2" type="masonry">
        <block wx:for="{{goods}}" wx:key="id">
          <view class="good">
          <image
					 mode="widthFix"
					 class="good-icon"
					 src="{{item.icon}}"
					/>
					<view class="good-title">
						<text>{{item.title}}</text>
					</view>
					<view class="good-comment">
						<text>3万+评价</text>
					</view>
				</view>
        </block>
        </grid-view>
      </scroll-view>
    </block>

</View>