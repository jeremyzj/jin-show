/* pages/work-show/work-show.wxss */
.container {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.nav-bar {
  display: flex;
  height: 44px;
  width: 100%;
  padding-left: 20px;
  flex-direction: row;
  align-items: center;
}

.nav-title {
  color: #333;
  font-weight: 500;
  font-size: 17px;
}

.work-list {
  /* margin-bottom: 20px; */
}

.work {
  background-color: #FFF;
}

.work-url {
  width: 100%;
  background-color: #fff;
}

.work-title {
  width: 100%;
  line-height: 1.4;
  margin: 8px 0;
  padding: 0 5px;
  font-size: 14px;
}


.good {
  background-color: #FFF;
}

.good-icon {
  width: 100%;
  border-radius: 6px;
}

.good-title {
  width: 100%;
  line-height: 1.4;
  margin: 8px 0;
  padding: 0 5px;
  font-size: 14px;
}

.good-comment {
  font-size: 12px;
  color: #ccc;
  padding-left: 5px;
  margin-bottom: 10px;
}