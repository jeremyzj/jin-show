/* pages/work-show/work-show.wxss */
.container {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.nav-bar {
  display: flex;
  height: 44px;
  width: 100%;
  padding-left: 20px;
  flex-direction: row;
  align-items: center;
}

.nav-title {
  color: #333;
  font-weight: 500;
  font-size: 17px;
}

.categorys-list {
  white-space: nowrap;
  background-color: #fff;
  width: 100%;
  display: flex;
  align-items: center;
  height: 44px;
}

.category-item {
  display: inline-block;
  height: 100%;
  justify-content: center;
  width: 80px;
  padding-left: 20px;
}

.category-name {
  color: #8f8888;
  font-size: 16px;
  transition: transform .3s;
}

.selected {
  transform: scale(1.2);
  color: #2c2c2c;
  font-weight: bold;
}

.work-list {
  margin-bottom: 20px;
}

.work {
  background-color: #FFF;
}

.work-url {
  width: 100%;
  background-color: #fff;
}

.work-title {
  width: 100%;
  line-height: 1.4;
  margin: 8px 0;
  padding: 0 5px;
  font-size: 14px;
}
