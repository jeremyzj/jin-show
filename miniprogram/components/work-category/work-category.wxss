/* components/work-category/work-category.wxss */

.categorys-list {
  background-color: #fff;
  width: 100%;
  align-items: center;
  height: 44px;
}

.category-item {
  display: inline-block;
  height: 100%;
  justify-content: center;
  width: 80px;
  padding-left: 20px;
}

.category-name {
  color: #8f8888;
  font-size: 16px;
  transition: transform .3s;
}

.selected {
  transform: scale(1.2);
  color: #2c2c2c;
  font-weight: bold;
}