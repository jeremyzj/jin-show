/* components/work-category/work-category.wxss */

.categorys-list {
  background-color: #fff;
  width: 100%;
  align-items: center;
  flex-direction: row;
  white-space: nowrap;
  justify-content: center;
}

.category-item {
  display: inline-block;
  align-items: center;
  height: 100%;
  justify-content: center;
  padding-left: 10px;
}

.category-name {
  color: #999;
  font-size: 16px;
}

.selected {
  color: #0091FF;
  font-weight: bold;
}

.line {
  background-color: #0091FF;
  margin-top: 4px;
  width: 20px;
  height: 3px;
  border-radius: 2px;
}