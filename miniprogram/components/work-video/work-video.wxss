/* components/work-video/work-video.wxss */
.work {
  background-color: #FFF;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.work-url {
  width: 100%;
  background-color: #fff;
}

.work-title {
  width: 100%;
  line-height: 1.4;
  margin: 8px 0;
  padding: 0 5px;
  font-size: 14px;
}

.video-cover {
  position: absolute; 
  display: flex; 
  align-items: center; 
  justify-content: center;
}

.video-btn {
  width: 32px;
  height: 32px;
}